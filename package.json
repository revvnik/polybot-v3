    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "forever-monitor": "^3.0.3",
    "i18n": "^0.15.1",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "mysql": "^2.18.1", 
    "npm-check-updates": "^16.14.12",
