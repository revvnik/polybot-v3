{
  "name": "revver-v3",
  "version": "0.0.1",
  "description": "Third and currently last version of Revver.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "node --no-warnings --require dotenv/config dist/index.js",
